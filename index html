let winnersShownSet = new Set();

function generateTopWinners() {
    const container = document.getElementById('topWinnersGrid');
    if(!container) return;

    // Pick 6 unique winners not shown recently
    let pool = ALL_WINNERS.filter((_,i) => !winnersShownSet.has(i));
    if(pool.length < 6) {
        winnersShownSet.clear();
        pool = [...ALL_WINNERS];
    }

    const picked = [];
    const poolCopy = [...pool];
    while(picked.length < 6 && poolCopy.length > 0) {
        const idx = Math.floor(Math.random() * poolCopy.length);
        const originalIdx = ALL_WINNERS.indexOf(poolCopy[idx]);
        picked.push(poolCopy[idx]);
        winnersShownSet.add(originalIdx);
        poolCopy.splice(idx, 1);
    }

    let html = '';
    picked.forEach((w, i) => {
        // Vary profit slightly each refresh for realism
        const profitVariation = Math.floor(Math.random()*600) - 200;
        const displayProfit = Math.max(1000, w.profit + profitVariation);
        const tradesVariation = Math.floor(Math.random()*30);
        const displayTrades = w.trades + tradesVariation;

        html += `<div class="winner-card">
            <div class="winner-rank">${i+1}</div>
            <div class="winner-header">
                <div class="winner-avatar">${w.emoji}</div>
                <div>
                    <div class="winner-name">${w.name}</div>
                    <div class="winner-location">${w.flag} ${w.loc}</div>
                    <div class="winner-join">Member since ${w.join}</div>
                </div>
            </div>
            <div class="winner-stats">
                <div class="winner-stat">
                    <div class="winner-stat-label">Total Profit</div>
                    <div class="winner-stat-value">$${displayProfit.toLocaleString()}</div>
                </div>
                <div class="winner-stat">
                    <div class="winner-stat-label">Win Rate</div>
                    <div class="winner-stat-value">${w.winRate}%</div>
                </div>
                <div class="winner-stat">
                    <div class="winner-stat-label">Trades</div>
                    <div class="winner-stat-value">${displayTrades}</div>
                </div>
                <div class="winner-stat">
                    <div class="winner-stat-label">Status</div>
                    <div class="winner-stat-value" style="font-size:12px;color:var(--accent-green);">ðŸŸ¢ Active</div>
                </div>
            </div>
        </div>`;
    });

    container.innerHTML = html;

    // Refresh with different winners every 30 seconds
    setTimeout(generateTopWinners, 30000);
}

