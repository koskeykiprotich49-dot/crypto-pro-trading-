function generateBotStats() {
    const container = document.getElementById('botStatsGrid');
    if(!container) return;

    const stats = [
        { icon:'ðŸ“Š', value:'120', label:'Total Trades' },
        { icon:'ðŸ’°', value:'$878.60', label:'Total Profit' },
