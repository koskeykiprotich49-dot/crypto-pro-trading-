}

function activateBot(name, btn) {
    if(!currentUser) { showToast('Please login first!'); return; }
    const bal = currentAccountMode === 'demo' ? currentUser.demoBalance : currentUser.realBalance;
    const bot = BOTS_DATA.find(b => b.name === name);
    if(bot && bal < bot.minBalance) {
        showToast(`âš ï¸ Minimum $${bot.minBalance} balance required\nto activate ${name}!\n\nPlease deposit first.`);
        return;
    }

    activeBots.add(name);
    if(btn) {
        btn.textContent = 'âœ… Bot Active';
        btn.style.background = 'linear-gradient(135deg,#10b981,#059669)';
    }

    showToast(`ðŸ¤– ${name} ACTIVATED!\n\nâœ… Bot is now trading automatically\nðŸ“Š You'll be notified for each trade\nðŸ’° Profits added to your balance automatically\n\nRelax and let AI work for you! ðŸš€`);
    addNotification(`ðŸ¤– ${name} Activated`, `Bot is now trading automatically on your account`);

    // Schedule bot trades
    setTimeout(() => simulateBotTrade(name), Math.random()*30000+20000);
}

function pauseBot(name, btn) {
    activeBots.delete(name);
    if(btn) {
        btn.textContent = 'â–¶ Resume';
        btn.style.background = 'var(--accent-green-dim)';
        btn.style.borderColor = 'var(--accent-green)';
        btn.style.color = 'var(--accent-green)';
    }
    showToast(`â¸ ${name} paused!\n\nYou can resume anytime from the Bots page.`);
}

function simulateBotTrade(botName) {
    if(!currentUser || !activeBots.has(botName)) return;
    const bal = currentAccountMode === 'demo' ? currentUser.demoBalance : currentUser.realBalance;
    if(bal < 10) return;

    const amount = Math.min(Math.random()*30+10, bal*0.1);
    const leverage = Math.floor(Math.random()*5)+5;
    const type = Math.random() > 0.5 ? 'buy' : 'sell';
    const isWin = Math.random() < 0.72; // Bots have slightly higher win rate
    const profitPct = (Math.random()*0.04+0.01) * (isWin ? 1 : -1);
    const profit = amount * profitPct * leverage;

    if(currentAccountMode === 'demo') currentUser.demoBalance += profit;
    else currentUser.realBalance += profit;
    currentUser.totalProfit = (currentUser.totalProfit || 0) + profit;

    localStorage.setItem('cryptoproUser', JSON.stringify(currentUser));

    if(profit > 0) launchConfetti();

    showToast(`ðŸ¤– ${botName} Trade!\n\n${type === 'buy' ? 'ðŸ“ˆ LONG' : 'ðŸ“‰ SHORT'} BTC/USDT\nðŸ’° Amount: $${amount.toFixed(2)}\nâš¡ Leverage: ${leverage}x\n\n${profit > 0 ? 'ðŸŽ‰ PROFIT: +$' + profit.toFixed(2) : 'âŒ LOSS: -$' + Math.abs(profit).toFixed(2)}`);
    addNotification(`ðŸ¤– ${botName} Trade ${profit > 0 ? 'Profit!' : 'Closed'}`, `${profit > 0 ? '+' : ''}$${profit.toFixed(2)} ${type.toUpperCase()} BTC/USDT`);

    if(currentLayer === 'dashboardLayer') updateDashboard();

    // Schedule next bot trade
    if(activeBots.has(botName)) {
        setTimeout(() => simulateBotTrade(botName), Math.random()*40000+20000);
    }
}

