function generateLiveTraders() {
    const container = document.getElementById('liveTradersTicker'); if(!container) return;
    let html = '';
    for(let i=0;i<40;i++){
        const [name,flag] = TRADER_NAMES[i%TRADER_NAMES.length];
        const profit = (Math.random()*900+50).toFixed(2);
        const emoji = EMOJIS[Math.floor(Math.random()*EMOJIS.length)];
        html += `<div class="trader-card"><div class="trader-avatar">${emoji}</div><div><div class="trader-name">${name} ${flag}</div><div class="trader-profit">+$${profit}</div></div></div>`;
    }
    container.innerHTML = html+html;
}

