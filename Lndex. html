let winnersShownSet = new Set();

function generateTopWinners() {
    const container = document.getElementById('topWinnersGrid'); if(!container) return;
    let pool = ALL_WINNERS.filter((_,i)=>!winnersShownSet.has(i));
    if(pool.length<6){ winnersShownSet.clear(); pool=[...ALL_WINNERS]; }
    const picked=[], poolCopy=[...pool];
    while(picked.length<6&&poolCopy.length>0){
        const idx=Math.floor(Math.random()*poolCopy.length);
        picked.push(poolCopy[idx]); winnersShownSet.add(ALL_WINNERS.indexOf(poolCopy[idx])); poolCopy.splice(idx,1);
    }
    container.innerHTML = picked.map((w,i)=>`<div class="winner-card"><div class="winner-rank">${i+1}</div><div class="winner-header"><div class="winner-avatar">${w.emoji}</div><div><div class="winner-name">${w.name}</div><div class="winner-location">${w.flag} ${w.loc}</div><div class="winner-join">Member since ${w.join}</div></div></div><div class="winner-stats"><div class="winner-stat"><div class="winner-stat-label">Total Profit</div><div class="winner-stat-value">$${(w.profit+Math.floor(Math.random()*600)-200).toLocaleString()}</div></div><div class="winner-stat"><div class="winner-stat-label">Win Rate</div><div class="winner-stat-value">${w.winRate}%</div></div><div class="winner-stat"><div class="winner-stat-label">Trades</div><div class="winner-stat-value">${w.trades+Math.floor(Math.random()*30)}</div></div><div class="winner-stat"><div class="winner-stat-label">Status</div><div class="winner-stat-value" style="font-size:12px;color:var(--accent-green);">üü¢ Active</div></div></div></div>`).join('');
    setTimeout(generateTopWinners, 30000);
}

