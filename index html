    if (currentLayer === 'tradingLayer' && currentUser) {
        updateTradingLayer();
    }
    if (currentLayer === 'withdrawalLayer' && currentUser) {
        updateWithdrawalLayer();
    }
}, 5000);

// =============================================
// ============================================
// PROCESS DEPOSIT â€” CONNECTED TO BACKEND
// ============================================
async function processDeposit(event) {
    event.preventDefault();
    if (!currentUser) { showToast('Please login first!'); return false; }
    if (!selectedPaymentMethod) { showToast('âš ï¸ Please select a payment method first!'); return false; }

    const amount = parseFloat(document.getElementById('depositAmount').value);
    const proof = document.getElementById('depositProof').value.trim();

    if (amount < 10) { showToast('âš ï¸ Minimum deposit is $10!'); return false; }

    // Show progress bar
    const pb = document.getElementById('depositProgressBar');
    if (pb) pb.classList.add('show');

    // â”€â”€ M-PESA PHONE â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    if (selectedPaymentMethod === 'mpesa-phone') {
        if (!currentUser.phone) {
            showToast('âš ï¸ No phone number on your account!\nPlease update your profile first.');
            if (pb) pb.classList.remove('show');
            return false;
        }

        const steps = [
            { pct: 20, label: 'ðŸ“± Connecting to M-Pesa...' },
            { pct: 45, label: 'ðŸ” Authenticating with Safaricom...' },
            { pct: 70, label: 'ðŸ“² Sending STK Push to your phone...' },
            { pct: 90, label: 'â³ Waiting for your confirmation...' },
            { pct: 100, label: 'âœ… Request sent!' }
        ];

        animateProgress('progressFill', 'progressText', 'progressLabel', steps, async () => {
            try {
                const response = await fetch(`${API_BASE_URL}/api/mpesa-payment`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        phoneNumber: currentUser.phone,
                        amount: amount,
                        email: currentUser.email,
                        userName: currentUser.name
                    })
                });

                const data = await response.json();

                if (data.success) {
                    if (pb) pb.classList.remove('show');

                    showToast(`ðŸ“± STK PUSH SENT!\n\nâœ… Check your phone: ${currentUser.phone}\nðŸ’° Amount: KES ${Math.ceil(amount * 130)}\n\nðŸ“Œ Enter your M-Pesa PIN to confirm.\nâ± Expires in 60 seconds!`);

                    // Start polling for payment confirmation
                    pollPaymentStatus(data.checkoutRequestID, amount);

                } else {
                    if (pb) pb.classList.remove('show');
                    showToast(`âŒ M-Pesa Error:\n\n${data.message || 'Failed to send STK Push'}\n\nPlease try again or use a different payment method.`);
                }

            } catch (error) {
                if (pb) pb.classList.remove('show');
                console.error('Payment error:', error);
                showToast('âŒ Could not connect to payment server.\n\nPlease check your connection or contact support.');
            }
        });

    // â”€â”€ M-PESA TILL â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    } else if (selectedPaymentMethod === 'mpesa-till') {
        if (!proof) {
            showToast('âš ï¸ Please enter your M-Pesa confirmation code!');
            if (pb) pb.classList.remove('show');
            return false;
        }

        const steps = [
            { pct: 20, label: 'ðŸ” Validating M-Pesa code...' },
            { pct: 55, label: 'âœ… Code verified...' },
            { pct: 80, label: 'ðŸ’° Crediting your account...' },
            { pct: 100, label: 'ðŸŽ‰ Deposit complete!' }
        ];

        animateProgress('progressFill', 'progressText', 'progressLabel', steps, () => {
            creditUserAccount(amount);
            if (pb) pb.classList.remove('show');
        });

    // â”€â”€ BANK TRANSFER â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    } else if (selectedPaymentMethod === 'bank') {
        if (!proof) {
            showToast('âš ï¸ Please enter your bank reference number!');
            if (pb) pb.classList.remove('show');
            return false;
        }

        const steps = [
            { pct: 25, label: 'ðŸ¦ Submitting bank transfer...' },
            { pct: 60, label: 'ðŸ“§ Notifying verification team...' },
            { pct: 100, label: 'âœ… Submitted for verification!' }
        ];

        animateProgress('progressFill', 'progressText', 'progressLabel', steps, async () => {
            try {
                await fetch(`${API_BASE_URL}/api/bank-payment`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        email: currentUser.email,
                        userName: currentUser.name,
                        amount: amount,
                        reference: proof
                    })
                });
            } catch (e) {
                console.warn('Bank API offline, using local fallback');
            }

            if (pb) pb.classList.remove('show');
            showToast(`ðŸ¦ BANK TRANSFER SUBMITTED!\n\nðŸ’° Amount: $${amount.toFixed(2)}\nðŸ“‹ Reference: ${proof}\n\nâ± Verification: 5â€“30 minutes\nðŸ“§ You'll receive email confirmation once verified.`);
            addNotification('ðŸ¦ Bank Transfer Submitted', `$${amount.toFixed(2)} pending verification`);
            resetDepositForm();
        });

    // â”€â”€ CRYPTO â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    } else if (selectedPaymentMethod === 'crypto') {
        if (!proof) {
            showToast('âš ï¸ Please enter your transaction hash / TXID!');
            if (pb) pb.classList.remove('show');
            return false;
        }

        const steps = [
            { pct: 25, label: 'ðŸª™ Submitting crypto transaction...' },
            { pct: 60, label: 'ðŸ” Logging for blockchain verification...' },
            { pct: 100, label: 'âœ… Submitted for verification!' }
        ];

        animateProgress('progressFill', 'progressText', 'progressLabel', steps, async () => {
            try {
                await fetch(`${API_BASE_URL}/api/crypto-payment`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        email: currentUser.email,
                        userName: currentUser.name,
                        amount: amount,
                        cryptoType: 'USDT-TRC20',
                        txHash: proof
                    })
                });
            } catch (e) {
                console.warn('Crypto API offline, using local fallback');
            }

            if (pb) pb.classList.remove('show');
            showToast(`ðŸª™ CRYPTO PAYMENT SUBMITTED!\n\nðŸ’° Amount: $${amount.toFixed(2)} USDT\nðŸ”— TX Hash: ${proof.substring(0, 20)}...\n\nâ± Blockchain confirmations: 10â€“30 mins\nðŸ“§ You'll be notified once confirmed.`);
            addNotification('ðŸª™ Crypto Payment Submitted', `$${amount.toFixed(2)} USDT pending blockchain confirmation`);
            resetDepositForm();
        });
    }

    return false;
}

// POLL M-PESA PAYMENT STATUS
// Checks every 5 seconds for up to 2 minutes
// ============================================
function pollPaymentStatus(checkoutRequestID, amount) {
    let attempts = 0;
    const maxAttempts = 24; // 24 Ã— 5s = 2 minutes

    showToast(`â³ Waiting for M-Pesa confirmation...\n\nEnter your PIN on your phone.\nThis window will update automatically.`);

    const interval = setInterval(async () => {
        attempts++;

        try {
            const response = await fetch(`${API_BASE_URL}/api/check-payment/${checkoutRequestID}`);
            const data = await response.json();

            if (data.status === 'completed') {
                clearInterval(interval);
                creditUserAccount(amount, data.transaction?.mpesaReceiptNumber);

            } else if (data.status === 'failed') {
                clearInterval(interval);
                showToast(`âŒ M-Pesa payment failed.\n\nPlease try again or use a different payment method.\n\nContact support if funds were deducted.`);

            } else if (attempts >= maxAttempts) {
                clearInterval(interval);
                showToast(`â± Payment timeout.\n\nIf you completed the payment, it will be credited manually within 30 minutes.\n\nContact support with your M-Pesa code: wa.me/254759401893`);
            }

        } catch (error) {
            console.warn('Polling error:', error.message);
            if (attempts >= maxAttempts) {
                clearInterval(interval);
            }
        }

    }, 5000);
}

// ============================================
// CREDIT USER ACCOUNT AFTER PAYMENT CONFIRMED
// ============================================
function creditUserAccount(amount, receiptNumber) {
    const isFirstDeposit = currentUser.realBalance === 0;
    const bonus = isFirstDeposit ? amount : 0;

    currentUser.realBalance += (amount + bonus);
    localStorage.setItem('cryptoproUser', JSON.stringify(currentUser));

    launchConfetti();

    if (bonus > 0) {
        showToast(`ðŸŽ‰ DEPOSIT CONFIRMED!\n\nâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\nðŸ’° Deposit: $${amount.toFixed(2)}\nðŸŽ Welcome Bonus: +$${bonus.toFixed(2)}\nâœ… Total Credited: $${(amount + bonus).toFixed(2)}\n${receiptNumber ? 'ðŸ§¾ Receipt: ' + receiptNumber : ''}\nâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n\nSwitch to REAL mode to start trading! ðŸš€`);
    } else {
        showToast(`âœ… DEPOSIT CONFIRMED!\n\nðŸ’° $${amount.toFixed(2)} credited to your REAL account!\n${receiptNumber ? 'ðŸ§¾ Receipt: ' + receiptNumber : ''}\n\nSwitch to REAL mode to trade! ðŸš€`);
    }

    addNotification('ðŸ’° Deposit Confirmed', `$${amount.toFixed(2)}${bonus > 0 ? ' + $' + bonus.toFixed(2) + ' bonus' : ''} added to your account`);

    resetDepositForm();
    setTimeout(() => showLayer('dashboardLayer'), 3000);
}

// ============================================
// RESET DEPOSIT FORM
// ============================================
function resetDepositForm() {
    const form = document.getElementById('depositForm');
    if (form) form.reset();
    selectedPaymentMethod = '';
    document.querySelectorAll('#depositForm .payment-btn').forEach(b => b.classList.remove('active'));
    document.querySelectorAll('#depositForm .payment-details').forEach(d => d.classList.remove('active'));
    updateCurrencyConversion();
}

// =============================================
// KEYBOARD SHORTCUTS
// =============================================
document.addEventListener('keydown', e => {
    // ESC closes AI chat panel
    if (e.key === 'Escape') {
        document.getElementById('aiChatPanel')?.classList.remove('open');
        document.getElementById('notifDropdown')?.classList.remove('open');
    }
    // ESC on welcome/login/signup goes back to welcome
    if (e.key === 'Escape' && ['loginLayer','signupLayer'].includes(currentLayer)) {
        showLayer('welcomeLayer');
    }
});

// =============================================
// PREVENT DOUBLE showLayer WRAPPING BUG
// =============================================
// The two patches above can stack. Consolidate into one clean override.
// Run this LAST so it wins.
(function consolidateShowLayer() {
    // Get the original from the top of the script (defined earlier)
    const base = function(id) {
        document.querySelectorAll('.layer').forEach(l => l.classList.remove('active'));
        const layer = document.getElementById(id);
        if (layer) layer.classList.add('active');
        currentLayer = id;

        const aiBtn = document.getElementById('aiAssistantBtn');
        if (aiBtn) {
            const showAI = ['dashboardLayer','tradingLayer','botsLayer','historyLayer','withdrawalLayer'].includes(id);
            aiBtn.style.display = showAI ? 'block' : 'none';
        }

        if (id === 'dashboardLayer' && currentUser) { updateDashboard(); switchAccount(currentAccountMode); }
        if (id === 'tradingLayer' && currentUser) updateTradingLayer();
        if (id === 'withdrawalLayer' && currentUser) updateWithdrawalLayer();
        if (id === 'referralLayer' && currentUser) updateReferralLayer();
        if (id === 'profileLayer' && currentUser) updateProfileLayer();
        if (id === 'historyLayer' && currentUser) { updateTradeHistory(); updateHistoryStats(); }

        loadChartsForLayer(id);
        syncMobileNav(id);

        if (id === 'depositLayer') {
            setTimeout(() => {
                const c = document.getElementById('currencyConverterContainer');
                if (c && c.innerHTML.trim() === '') addCurrencyConverter();
            }, 100);
        }
        if (id === 'botsLayer') {
            setTimeout(restoreBotButtonStates, 150);
        }

        window.scrollTo({ top: 0, behavior: 'smooth' });
    };

    // Override the global
    window.showLayer = base;
})();

</script>
</body>
</html>
